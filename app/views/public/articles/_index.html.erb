<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-5 mini-title">記事一覧</h3></div>
    <div class="col-10 col-md-10 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
      <div class="articles-wrapper">
        <div class="contents-title articles-center">
          <% @articles.each do |article| %>
            <div class="card">
              <div class="card-img-top">
                <%= link_to article_path(article.id) do %>
                  <%= image_tag article.get_image, class: "article-img" %>
                <% end %>
              </div>
              <div class="card-body">
                <div class="card-title">
                  <%= article.title %>
                </div>
                  <%= image_tag article.user.get_profile_image, class: "rounded-circle img" %>
                  <%= link_to article.user do %>
                    <%= article.user.screen_name %>
                  <% end %>
                <div class="card-text">
                  <%= render "public/likes/btn", article: article %>
                  <%= render "public/comments/counter", article: article %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
          
