<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-5 mini-title">記事一覧</h3></div>
    <div class="col-12 col-md-12 col-sm-12 mx-2 mx-sm-auto px-0 my-5 list">
      <% @articles.each do |article| %>
        <div class="card">
          <div class="card-img">
            <%= link_to article_path(article.id) do %>
              <%= image_tag article.get_image, class: "card-img" %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="card-title">
              <%= article.title %>
            </div>
            <div class="card-icon">
              <%= image_tag article.user.get_profile_image, class: "rounded-circle icon-mini" %>
              <%= link_to article.user do %>
                <%= article.user.screen_name %>
              <% end %>
            </div>
            <div class="card-link">
              <id ="like_buttons_<%= @article.id %>">
                <%= render "public/likes/btn", article: article %>&nbsp;
              </id>
              <div class="comments-counter">
                <%= render "public/comments/counter", article: article %>
              </div>
            </div>
          </div>
        </div>

      <% end %>
      <span id ="back"><a href="#">
        <%= image_tag asset_path("top-back.png"), class:"back-img"%></a>
      </span>

    </div>
  </div>
</div>
          
