<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-5 mini-title">投稿編集</h3></div>
    <div class="col-10 col-md-10 col-sm-10 mx-2 mx-sm-auto px-0 my-5">

        <%= form_with model: @article, local: true do |f| %>
            <div class="form-group">
              <%= f.label :title, "題名" %>
              <%= f.text_field :title %>
            </div>
            
            <div class="form-group">
              <%= f.label :body, "記事の内容" %>
              <%= f.text_area :body %>
            </div>
            
            <div class="form-group">
              <%= f.label "Tag (スペースを入力することで複数のタグを付けることができます。)" %>
              <%= f.text_field :tag_name, class: 'form-control article_tag_name' %>
            </div>
            
          <% if @article.is_draft == true %>
            <div class="form-group">
              <%= f.submit "投稿", :name => "publicize_draft" %>
            </div>
            <div class="form-group">
              <%= f.submit "下書きを更新", :name => "update_draft" %>
            </div>
          <% else %>
            <%= f.submit "投稿を更新", :name => "update_post" %>
          <% end %>
          
        <% end %>
        
    </div>
  </div>
</div>