<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-5 mini-title">記事一覧</h3></div>
      <div class="col-10 col-md-10 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
        <% @articles.each do |article| %>
          <div class="card">
            <div class="card-img-top">
              <%= link_to article_path(article.id) do %>
                <%= image_tag @article.get_image, class: "card-img-top" %>
              <% end %>
              <div class="card-body">
                <p class="card-title">
                  <%= @article.title %>
                </p>
                <%= image_tag @article.user.get_profile_image, class: "rouded-circle" %>
                <%= link_to article_user do %>
                  <%= @article.user.screen_name %>
                <% end %>
                <%= render "public/likes/btn", article: article %>
                <%= render "public/comments/counter", article: @article %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
          
          <% @tag_list.each do |list|%>
            <%=list.name %>
            <%="(#{list.articles.count})" %>
          <% end %>
        
