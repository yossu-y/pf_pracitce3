<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-5 mini-title">新規投稿</h3></div>
    <div class="col-10 col-md-10 col-sm-10 mx-2 mx-sm-auto px-0 my-5">

        <%= form_with model: @article, local: true do |f| %>
          <div class="form-group">
            <%= f.label :image, "画像" %><br>
            <%= f.file_field :image, class: "form" %>
          </div>
        
          <div class="form-group">
            <%= f.label :title, "題名" %><br>
            <%= f.text_field :title, class: "form" %>
          </div>
          
          <div class="form-group article_body">
            <%= f.label :body, "記事の内容" %>
            <%= f.rich_text_area :body, rows: 50, class: "form" %>
          </div>
          
          <div class="form-group">
              <%= f.label "Tag (スペースを入力することで複数のタグを付けることができます。)" %><br>
            <ul id="myTags" value="tags" name="tags">
              <%= f.text_field :tag_name, class: "form article_tag_name" %>
            </ul>
          </div>
          
          <div class="form-group button">
            <%= f.submit "下書きに保存", :name => "draft" %>
            <%= f.submit "投稿", :name => "post" %>
          </div>
          
        <% end %>
    </div>
  </div>
</div>