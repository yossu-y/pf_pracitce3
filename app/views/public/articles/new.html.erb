<h5>新規投稿</h5>

<%= form_with model: @article, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "題名" %>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <%= f.label :body, "記事の内容" %>
    <%= f.text_area :body %>
  </div>
  
  <div class="form-group">
    <%= f.label "Tag (スペースを入力することで複数のタグを付けることができます。)" %>
    <%= f.text_field :tag_name, class: 'form-control article_tag_name' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "投稿", :name => "post" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "下書きに保存", :name => "draft" %>
  </div>
<% end %>
