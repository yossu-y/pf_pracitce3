<h5>公開された記事</h5>

<table>
  <tr>
    <th>タイトル</th>
    <th><%= @article.title %></th>
  </tr>
  <tr>
    <th>内容</th>
    <th><%= @article.body %></th>
  </tr>
  <tr>
    <th>タグ</th>
    <th>
      <% @article_tags.each do |tag| %>
        <%=tag.name%>
        <%="(#{tag.articles.count})" %>
      <% end %>
    </th>
  </tr>
</table>

<%= link_to "編集する", edit_article_path(@article) %>
<%= link_to "削除する", article_path, method: :delete, data: { confirm: "本当に削除しますか？"} %>

<%= render "public/comments/form", article: @article, comment: @comment %>

<%= render "public/comments/index", article: @article %>


