グループチャット

<div id="chat">
  <%= form_with model: @chat do |f| %>
    <%= f.text_area :content %>
    <%= f.submit "送信" %>
  <% end %>
</div>



<% @chats.each do |chat| %>
  <%= chat.content %>
<% end %>


<% if @group.is_owned_by?(current_user) %>
  <%= link_to "イベントを作成する", new_group_event_notice_path(@group) %>
<% end %>
