<table>
  <tr>
    <td><%= image_tag @user.get_profile_image, size: "100x100" %></td>
  </tr>
  <tr>
    <td>ニックネーム</td>
    <td>
      <%= link_to edit_user_path do %>
        <%= @user.screen_name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>紹介文</td>
    <td><%= @user.introduction %></td>
  </tr>
  <tr>
    <td>follows</td>
    <td><%= link_to @user.followings.count, user_followings_path(@user) %></td>
  </tr>
  <tr>
    <td>followers</td>
    <td><%= link_to @user.followers.count, user_followers_path(@user) %></td>
  </tr>
</table>

<div class='row'>
  <% if current_user != @user %>
    <%= render "relationships/btn", user: user %>
  <% else %>
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary edit_user_#{@user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>


<div>
  <%= link_to "グループを作成する", new_group_path %> | 
  <%= link_to "グループ一覧", groups_path %>
</div>